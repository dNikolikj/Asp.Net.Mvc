@model AddBurgerToTheBasketViewModel

<div >
<h2>Choose your burger match:</h2>

<div class="col-md-4 ">
        <form  asp-action="AddBurgerPost" method="post">
            <input type="hidden" asp-for="OrderId"/>
            <div class="form-group">
                <label asp-for="BurgerId" class="control-label"></label>
               <select class="form-control" asp-for="BurgerId" asp-items="@(new SelectList(ViewBag.Burgers, "Id", "Name"))"></select>
            </div>
             <div class="form-group">
                <label asp-for="TypeOfBurger" class="control-label"></label>
               <select class="form-control" asp-for="TypeOfBurger" asp-items="Html.GetEnumSelectList<TypeOfBurger>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfBurgers" class="control-label"></label>
                <input asp-for="NumberOfBurgers" class="form-control" />
            </div>
            <br />
            <button type="submit" style="border-radius:4px; background-color:aquamarine">Add a burger mate!</button>
        </form>
    </div>

</div>