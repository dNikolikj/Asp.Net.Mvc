@model List<OrderViewModel>



<div class="text-center"> 
<h1>@ViewBag.Title</h1>


@for (int i = 0; i < @Model.Count; i++)
{

    <partial name="~/Views/Shared/Partials/_OrderDetails.cshtml" for="@Model[i]" />
    <a asp-controller="Order" asp-action="Details" asp-route-id="@Model[i].Id">Details</a>
    <a asp-controller="Order" asp-action="ModifyOrder" asp-route-id="@Model[i].Id">Modify</a>
    <a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@Model[i].Id">Delete</a>
}
<br />

    <a asp-controller="Order" asp-action="AddNewOrder">Add New Order</a>
</div>