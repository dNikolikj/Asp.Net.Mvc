
@model List<BurgerViewModel>

    <div class="text-center"> 
    <h3>@ViewData["Title"]</h3>

    <h4>@ViewData["SubTitle"]</h4>

     <a asp-controller="Burger" asp-action="MakeBurger">Make Your Own Burger!</a>




     @for(int i = 0; i < @Model.Count; i++)
     { 
         
         <partial name ="~/Views/Shared/Partials/_BurgerDetails.cshtml" for="@Model[i]"/>
         <a asp-controller="Burger" asp-action="ChefMagic" asp-route-id="@Model[i].Id">Burger processor</a>
         <a asp-controller="Burger" asp-action="Details" asp-route-id="@Model[i].Id">Details</a>
        <a asp-controller="Burger" asp-action="EditBurger" asp-route-id="@Model[i].Id">Edit</a>
        <a asp-controller="Burger" asp-action="DeleteBurger" asp-route-id="@Model[i].Id">Delete</a>

     }

     </div>