@model BurgerViewModel

<h2 class="display-2"> Let's see your skills, make one of your own!</h2>
<h3>The price for custom made burger it's 450 denars , plus
   30 💰 for fries. Let's get started.🍔</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeBurgerPost" method="post">
            <div class="form-group">
              <label asp-for="BurgerName" class="control-label"></label>
              <select class="form-control" asp-for="BurgerName" asp-items="@(new SelectList(ViewBag.Burgers,"Name", "Name"))"></select>
            </div>
             <div class="form-group">
                <label asp-for="Fries" class="control-label"></label>
                <input asp-for="Fries" type="checkbox" />
            </div>
             <div class="form-group">
                <label asp-for="ChooseYourBurgerFit" class="control-label"></label>
               <select class="form-control" asp-for="ChooseYourBurgerFit" asp-items="Html.GetEnumSelectList<TypeOfBurger>()"></select>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>
