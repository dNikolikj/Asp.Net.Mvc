@model OrderViewModel


<h2>Modify your order before it's done!</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ModifyOrderPost" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BurgerId" class="control-label"></label>
                <select class="form-control" asp-for="BurgerId" asp-items="@(new SelectList(ViewBag.Burgers,"Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for=" UserId" class="control-label"></label>
                <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users,"Id", "FullName"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="StoreAddress" class="control-label"></label>
                <select class="form-control" asp-for="StoreAddress" asp-items="Html.GetEnumSelectList<StoreAddress>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select class="form-control" asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Delivered" class="control-label"></label>
                <input asp-for="Delivered" type="checkbox" />
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>